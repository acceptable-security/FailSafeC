#!/usr/bin/make -f
# -*- makefile -*-
#
# debian/rules for locally building Fail-Safe C binary packages.
# refer README.local-packaging on the topdir for details.
#
# This file is generated by dh-make.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

build_dir := debian-build-dir
path_back_to_build_dir = ..

configure: configure-stamp
configure-stamp:
	dh_testdir
	mkdir -p $(build_dir)
	(cd $(build_dir) && $(path_back_to_build_dir)/configure --disable-default-tuning --disable-reautoconf)
	touch configure-stamp

build: build-arch build-indep

build-arch: build-arch-stamp
build-arch-stamp: configure-stamp
        # avoid refering ocamlrun in locallly-built packages
	$(MAKE) -C $(build_dir) OCAMLBLDFLAGS=-custom
	debian/test-ocamlrun.sh $(build_dir)/compiler/trans.bc $(build_dir)/compiler/link.bc
	cp LICENSE debian/copyright
        # build test binary to pick up library dependencies (and for sanity testing)
	driver/fscc -B $(build_dir) -o debian/fib-test test/manualtest/fib.c
	touch build-arch-stamp

build-indep: build-indep-stamp
build-indep-stamp: configure-stamp 
	touch build-indep-stamp

clean:
	dh_testdir
	dh_testroot
# don't replace with build_dir!  Otherwise disasters happen if build_dir=. specified!
	test ! -d debian-build-dir || rm -rf debian-build-dir
#	-$(MAKE) -C $(build_dir) clean
	rm -f build-arch-stamp build-indep-stamp configure-stamp
	rm -f debian/copyright debian/fib-test
	debian/update-changelog.sh
	dh_clean

install: install-indep install-arch

install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i
	dh_install -i

install-arch:
	debian/update-changelog.sh

	dh_testdir
	dh_testroot
	debian/test-ocamlrun.sh $(build_dir)/compiler/trans.bc $(build_dir)/compiler/link.bc
	dh_clean -k -s 
	dh_installdirs -s
	$(MAKE) -C $(build_dir) install prefix=/usr destdir=$(CURDIR)/debian/failsafec
	install -d $(CURDIR)/debian/failsafec/usr/share/man/man1
#	mv $(CURDIR)/debian/failsafec/usr/bin/ec $(CURDIR)/debian/failsafec/usr/lib/fsc/default/tools/ec
	debian/process-manpage.sh doc/fscc.1 $(CURDIR)/debian/failsafec/usr/share/man/man1/fscc.1
	dh_install -s

binary-common:
	dh_testdir
	dh_testroot
	debian/test-ocamlrun.sh $(build_dir)/compiler/trans.bc $(build_dir)/compiler/link.bc
	dh_installchangelogs 
	dh_installdocs
	dh_installman
	dh_link
	dh_strip -X.bc
	dh_compress 
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps -- debian/failsafec/usr/lib/fsc/default/compiler/* debian/fib-test
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary: binary-arch
.PHONY: build clean binary-arch binary install install-indep install-arch configure
